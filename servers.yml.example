# Server Configuration
# Define all servers here with their IPs and metadata

servers:
  # Production server
  prod-web-1:
    ip: YOUR_SERVER_IP
    environment: production
    roles:
      - web
      - api
      - database
    ssh_user: YOUR_SSH_USER
    tags:
      - frontend
      - backend

# Environment groups for easy targeting
environments:
  production:
    - prod-web-1

# Role-based groups
role_groups:
  web:
    - prod-web-1
  
  api:
    - prod-web-1
  
  database:
    - prod-web-1
